{
  "name": "Rhymey",
  "short_name": "Rhymey",
  "description": "An extension that gets words that rhyme with your selected word. Useful for poetry.",
  "version": "1.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "declarativeContent",
    "activeTab",
    "storage",
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "http://localhost/*"],
      "js": ["js/content.js"],
      "css": ["css/custom.css"]
    },
    {
      "js": ["js/googleDocsUtil.js"],
      "matches": ["https://docs.google.com/document/*"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
