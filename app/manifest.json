{
  "name": "Rhymey",
  "short_name": "Rhymey",
  "description": "An extension that gets words that rhyme with your selected word. Useful for poetry.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "http://localhost/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/custom.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}